<h1>Listing books</h1>

<table>
  <tr>
    <th>Isbn</th>
    <th>Price</th>
    <th>Author</th>
    <th>Title</th>
    <th>Course</th>
    <th>Description</th>
    <th>When</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.isbn %></td>
    <td><%= book.price %></td>
    <td><%= book.author %></td>
    <td><%= book.title %></td>
    <td><%= book.course %></td>
    <td><%= book.description %></td>
    <td><%= time_ago_in_words(book.updated_at) %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

