<div id='login_form'>
  <% if current_user %>
    Sup, <%= current_user.email %>? <%= link_to 'logout', logout_path %>
  <% else %>
    <%= form_for :user_session, :url => user_sessions_path, :method => :create do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email, :size => 20 %>
      <%= f.label :password %>
      <%= f.password_field :password, :size => 20 %>
      <br />
      <%= f.check_box :remember_me %><%= f.label :remember_me %>
      <%= f.submit "Login" %>
    <% end %>
  <% end %>
</div>
