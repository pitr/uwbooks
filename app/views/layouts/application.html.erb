<!doctype html>
<html>
<head>
  <title>Uwbooks</title>
  <%= stylesheet_link_tag 'reset', 'text', '960', 'application' %>
  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Philosopher&subset=latin' %>
  <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js' %>
  <%= javascript_include_tag 'jquery-1.4.4.min' if Rails.env.development? %>
  <%= javascript_include_tag 'rails', 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <% if flash[:warning] or flash[:notice] %>
  <a href='#' id='notice_wrapper'>
    <div id='notice' <%= 'class="warning"' if flash[:warning] %>>
      <%= flash[:warning] || flash[:notice] %>
    </div>
    <script type="text/javascript">
      setTimeout("$('#notice_wrapper').slideUp();", 5000)
    </script>
  </a>
  <% end %>

  <div class='container_12'>
    <div id='header' class='grid_3 prefix_2'>
      <h1><a href='/'>UW books</a></h1>
    </div>
    <div class='grid_5'>
      <%= render :partial => 'layouts/login_form' %>
    </div>

    <div class='clear'></div>

    <div class='grid_8 prefix_2'>
      <div id='content'>
        <%= yield %>
      </div>
    </div>

    <div class='clear'></div>

    <div id='footer' class='grid12'>
      NR Aggressive Minimalist Style
      <br/>
      &#169; UW Books 2010
    </div>

    <div class='clear'></div>
  </div>

</body>
</html>
