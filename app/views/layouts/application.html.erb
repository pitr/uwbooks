<!doctype html>
<html>
<head>
  <title>Uwbooks</title>
  <%= stylesheet_link_tag 'reset', 'text', '960', 'application' %>
  <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js' %>
  <%= javascript_include_tag :all %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div class='container_12'>
    <div id='header' class='grid_3 prefix_2'>
      <h1>UW books</h1>
      <%= link_to 'Add Book', new_book_path %>
    </div>
    <div class='grid_5'>
      <%= render :partial => 'layouts/login_form' %>
    </div>

    <div class='clear'></div>

    <div class='grid_8 prefix_2'>
      <div id='content'>
        <%= yield %>
      </div>
    </div>

    <div class='clear'></div>

    <div id='footer' class='grid12'>
      NR Aggressive Minimalist Style
      <br/>
      &#169; UW Books 2010
    </div>

    <div class='clear'></div>
  </div>

</body>
</html>
